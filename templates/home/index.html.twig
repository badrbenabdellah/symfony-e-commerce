{% extends 'base.html.twig' %}

{% block title %}Hello Page{% endblock %}

{% block body %}
<div class="container">
    <h1>Products</h1>
    <div class="row">
        {% for product in products %}
            <div class="col-md-3 mt-4">
                <div class="card" style="width: 18rem;">
                    <img src="{{ asset('uploads/images/'~product.image) }}" class="card-img-top" alt="...">
                    <div class="card-body">
                        <a style="text-decoration: none; color: red" href="{{ path('app_home_product_show',{'id':product.id}) }}"> <h5 class="card-title">{{ product.name|slice(0,50) }}</h5></a>
                        <p class="card-text"> {{ product.description|slice(0,50) }}..</p>
                        <a href="#" class="btn btn-success">Add To Cart</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
