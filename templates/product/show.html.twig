{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <div class="container"><br>
        <h1>Product</h1><br>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ product.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ product.name }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ product.description }}</td>
                </tr>
                <tr>
                    <th>Price</th>
                    <td>{{ product.price }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_product_index') }}"><button class="btn btn-primary">back to list</button></a>

        <a href="{{ path('app_product_edit', {'id': product.id}) }}"><button class="btn btn-warning">edit</button></a>

        <a href="{{ path('app_product_stock_add_history', {'id': product.id}) }}"><button class="btn btn-success">view stock addition history</button></a>

        {{ include('product/_delete_form.html.twig') }}
    </div>
{% endblock %}
